{
    "name": "struggle-for-php/sfp-psalm-psr-log-plugin",
    "description": "Psr Log (psr-3)",
    "type": "psalm-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "sasezaki",
            "email": "sasezaki@gmail.com"
        }
    ],
    "require": {
        "php" : ">=7.2.0",
        "vimeo/psalm": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "squizlabs/php_codesniffer": "^3.3",
        "psr/log": "^1.1",
        "codeception/base": "^3.1",
        "weirdan/codeception-psalm-module": "^0.2.2"
    },
    "extra": {
        "psalm" : {
            "pluginClass": "Sfp\\Psalm\\PsrLogPlugin\\Plugin"
        }
    },
    "autoload": {
        "psr-4": {
            "Sfp\\Psalm\\PsrLogPlugin\\": ["."]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SfpTest\\Psalm\\PsrLogPlugin\\": "tests"
        }
    },
    "scripts" : {
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "analyze": "psalm",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
